<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/psst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:text="Hey, I was unable to display the age of user as it requires app to be reviewed by Facebook. And as per my knowledge, Google doesn't provides user's age using normal authentication. So, I'm displaying just the basic info using facebook and Google authentication. Hope you don't mind!"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/psst"
        android:src="@drawable/ic_launcher_foreground"
        ></de.hdodenhof.circleimageview.CircleImageView>



    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:text="Prince"
        android:textSize="22sp"
        android:textAlignment="center"
        android:padding="4dp"
        android:layout_below="@+id/img"
        ></TextView>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:text="prince11rajput@gmail.com"
        android:layout_below="@id/name"
        ></TextView>


    <Button
        android:id="@+id/log_out"
        android:text="LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email"
        android:textColor="#fff"
        android:background="#831010"
        android:padding="4dp"
        android:textSize="15sp"
        ></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by: Prince:)"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_margin="10dp"></TextView>
</RelativeLayout>